<% include ../common/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-8 blog-main">
          <% for(var i=0;i<articles.length;i++){ %>
              <div class="blog-post mt-3 mb-3">
                <div class="row">
                <div class="col-sm-3">
                  <img src="/assets/img/<%= articles[i].pic %>" width="100%" height="150"/>
                </div>
                <div class="col-sm-9">
                  <h3><a href="/articles/id/<%= articles[i].id %>"><%= articles[i].title %></a></h3>
                  <p><%= articles[i].body %></p>
                  <p class="text-muted"><i><%= articles[i].date.toDateString() %></i></p>
                </div>
              </div>
            </div>
            <hr/>
          <% } %>
          <nav class="blog-pagination">
           <a class="btn btn-outline-primary" href="#">Older</a>
           <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
         </nav>
        </div>
        <% include ../common/sidebar %>
    </div>
</div>
<% include ../common/footer %>
